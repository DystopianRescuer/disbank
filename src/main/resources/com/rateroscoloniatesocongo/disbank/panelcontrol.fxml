<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="410.0" prefWidth="843.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.rateroscoloniatesocongo.disbank.fx_controllers.PanelControlController">
    <VBox alignment="TOP_CENTER" layoutX="10.0" layoutY="21.0" prefHeight="369.0" prefWidth="200.0" spacing="10.0">
        <Label text="Control">
            <font>
                <Font name="Ubuntu Bold" size="20.0" />
            </font>
        </Label>
        <VBox alignment="CENTER" prefHeight="276.0" prefWidth="200.0" spacing="10.0">
            <Button mnemonicParsing="false" onAction="#onInfoButtonClick" prefHeight="52.0" prefWidth="198.0" text="Información" />
            <Button mnemonicParsing="false" onAction="#onRegistroAsociadoClick" prefHeight="52.0" prefWidth="198.0" text="Registro de Asociado" />
            <Button mnemonicParsing="false" onAction="#onListaAsociadosClick" prefHeight="52.0" prefWidth="198.0" text="Lista de Asociados" />
        </VBox>
        <Button fx:id="botonCorte" defaultButton="true" lineSpacing="2.0" mnemonicParsing="false" onAction="#onCorteRequest" prefHeight="44.0" prefWidth="138.0" text="Corte del día" textAlignment="CENTER" textFill="WHITE" underline="true" />
    </VBox>
    <VBox layoutX="220.0" layoutY="21.0" prefHeight="380.0" prefWidth="346.0">
        <Label text="Transacciones de hoy">
            <font>
                <Font name="Ubuntu Bold" size="17.0" />
            </font>
            <VBox.margin>
                <Insets bottom="13.0" />
            </VBox.margin>
        </Label>
        <HBox>
            <TextField fx:id="searchBar" onAction="#onSearchBarUpdate" prefHeight="24.0" prefWidth="236.0" promptText="Buscar...">
                <HBox.margin>
                    <Insets bottom="5.0" />
                </HBox.margin>
            </TextField>
        </HBox>
        <TableView fx:id="tablaTransacciones" fixedCellSize="2.0" prefHeight="332.0" prefWidth="372.0">
         <columns>
            <TableColumn fx:id="columnaIdTransaccion" prefWidth="75.0" text="id" />
            <TableColumn fx:id="columnaAsociadoTransaccion" prefWidth="99.0" text="Asociado" />
            <TableColumn fx:id="columnaTipoTransaccion" prefWidth="83.0" text="Tipo" />
            <TableColumn fx:id="columnaEstadoTransaccion" prefWidth="87.0" text="Estado" />
         </columns></TableView>
    </VBox>
    <Pane layoutX="575.0" layoutY="23.0">
        <VBox fx:id="panelInfo" prefHeight="369.0" prefWidth="259.0" style="-fx-background-color: #f4f5f5;">
            <Label prefHeight="30.0" prefWidth="272.0" text="Información">
                <font>
                    <Font name="Ubuntu Bold" size="19.0" />
                </font>
            </Label>
        </VBox>
        <VBox fx:id="panelRegistroAsociado" alignment="TOP_CENTER" prefHeight="369.0" prefWidth="259.0" spacing="10.0" style="-fx-background-color: #f4f5f5;">
            <Label prefHeight="22.0" prefWidth="194.0" text="Registro de Asociado">
                <font>
                    <Font name="Ubuntu Bold" size="19.0" />
                </font>
            </Label>
            <VBox alignment="CENTER" prefHeight="246.0" prefWidth="259.0" spacing="15.0">
                <TextField fx:id="nombre" promptText="Nombre" />
                <TextField fx:id="clabe" promptText="Cuenta CLABE" />
                <TextField fx:id="banco" promptText="Banco" />
                <TextField fx:id="telegramUser" promptText="Telegram User" />
                <TextField fx:id="nombreComercio" promptText="Nombre de su puesto" />
                <CheckBox fx:id="comisionCheck" mnemonicParsing="false" text="Absorbe comisión" />
            </VBox>
            <VBox fx:id="registrandoUsuario" alignment="CENTER" prefHeight="34.0" prefWidth="194.0" visible="false">
                <ProgressIndicator prefHeight="27.0" prefWidth="59.0" />
                <Label text="Registrando asociado..." />
            </VBox>
            <Button mnemonicParsing="false" onAction="#onRegistrarUsuarioAttempt" prefHeight="24.0" prefWidth="86.0" text="Registrar" />
        </VBox>
        <VBox fx:id="panelListaAsociados" prefHeight="369.0" prefWidth="259.0" style="-fx-background-color: #f4f5f5;">
            <Label prefHeight="29.0" prefWidth="278.0" text="Lista de Asociados">
                <font>
                    <Font name="Ubuntu Bold" size="19.0" />
                </font>
            </Label>
            <TableView fx:id="listaAsociados" prefHeight="287.0" prefWidth="259.0">
                <columns>
                    <TableColumn fx:id="columnaIdAsociado" editable="false" prefWidth="40.0" text="Id" />
                    <TableColumn fx:id="columnaNombreAsociado" editable="false" prefWidth="134.0" text="Nombre" />
                    <TableColumn fx:id="columnaPuestoAsociado" editable="false" prefWidth="82.0" text="Puesto" />
                </columns>
                <VBox.margin>
                    <Insets top="30.0" />
                </VBox.margin>
            </TableView>
         <Button fx:id="eliminarAsociadoBoton" disable="true" mnemonicParsing="false" prefHeight="24.0" prefWidth="94.0" text="Eliminar" />
        </VBox>
    </Pane>
</AnchorPane>
